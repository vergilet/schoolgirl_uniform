class <%= class_name.camelcase %>Controller < SchoolgirlUniform::BaseController

  def initialize_form
    @form = <%= class_name.camelcase %>Form.new(session[session_key] || {})
  end

  def finish
    @record = User.find_by(id: params[:identifier])

    # advanced
    # @user = User.find_by(id: params[:identifier][:user_id])
    # @contact_info = ContactInfo.find_by(id: params[:identifier][:contact_info])
    # or
    # @user = User.find_by(id: params[:user_id])
    # @contact_info = ContactInfo.find_by(id: params[:contact_info_id])
  end

  def paths
    {
      current: current_<%= class_name.underscore %>_path(step: @form.current_step),
      previous: previous_<%= class_name.underscore %>_path
    }
  end
end
